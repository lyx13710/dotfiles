# Controles para mpd con mpc
bindsym $mod+n mode "$Music"
mode "$Music" {
# Play / Pause
# Reproducir
	bindsym p exec mpc toggle
# Stop
# Detener
	bindsym s exec mpc stop
# Next
# Siguiente
	bindsym n exec mpc next
# Previous
# Anterior
	bindsym b exec mpc prev
	
	bindsym Escape mode "default"
    bindsym Return mode "default"
}

